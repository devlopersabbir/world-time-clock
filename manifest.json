{
  "name": "World Time Clock",
  "description": "World Time Clock: Your Ultimate Digital Companion for Global Time Management",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "World Time Clock",
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "256": "icon.png",
    "48": "icon.png"
  },
  "permissions": ["activeTab", "notifications"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "options_page": "index.html",
  "content_scripts": [
    {
      "js": ["src/content.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}
